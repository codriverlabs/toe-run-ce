apiVersion: codriverlabs.ai.toe.run/v1alpha1
kind: PowerToolConfig
metadata:
  name: tcpdump-config
  namespace: toe-system
spec:
  name: "tcpdump"
  description: "Network packet capture using tcpdump"
  image: __TCPDUMP_IMAGE__
  defaultArgs:
    - "-i"
    - "any"
  securityContext:
    runAsRoot: true
    capabilities:
      add:
        - NET_ADMIN
        - NET_RAW
